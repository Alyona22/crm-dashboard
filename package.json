{
  "name": "crm-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "yarn lint:css \"/*.{css,scss}\" && yarn lint:js",
    "lint:css": "stylelint",
    "lint:js": "yarn run eslint \"./src\"",
    "format": "(yarn format:css \"/*.{css,scss}\"  true) && (yarn format:js \"./src\"  true)",
    "format:css": "stylelint --fix",
    "report": "(yarn lint:css \"**/*.{css,scss}\" -o ./.reports/stylelint.json -f json  true) && (yarn lint:js -o './.reports/eslint.json' -f json  true)",
    "type-check": "tsc -p .",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "react-use": "^17.5.1",
    "use-debounce": "^10.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.0",
    "@eslint/js": "^9.6.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-alloy": "^5.1.2",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-config-turbo": "^1.12.4",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.11",
    "postcss": "^8.4.35",
    "postcss-mixins": "^9.0.4",
    "postcss-preset-env": "^9.4.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.4"
  }
}
